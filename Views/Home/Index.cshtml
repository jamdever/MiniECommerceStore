@model IEnumerable<MiniECommerceStore.Models.Product>

@{
    ViewData["Title"] = "Home";
    var searchString = Context.Request.Query["searchString"].ToString();
}

<h2 class="text-center mb-5 mt-5">Featured Products</h2> <!-- Added top margin mt-5 -->

<div class="row justify-content-center pt-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4 d-flex align-items-stretch">
            <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductID" class="text-decoration-none text-dark w-100">
                <div class="card h-100 text-center">
                    <!-- Product Image -->
                    @if (!string.IsNullOrEmpty(product.ImageFileName))
                    {
                        <img src="~/images/products/@product.ImageFileName" class="card-img-top" alt="@product.Name" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="~/images/products/default.png" class="card-img-top" alt="No Image" style="height:200px; object-fit:cover;" />
                    }

                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text"><strong>Price:</strong> $@product.Price</p>
                        <p class="card-text text-truncate">@product.Description</p>

                        <!-- Average Rating -->
                        @{
                            var avgRating = product.Reviews != null && product.Reviews.Any()
                            ? product.Reviews.Average(r => r.Rating)
                            : 0;
                        }
                        <p class="mb-0">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Round(avgRating))
                                {
                                    <span class="text-warning">★</span>
                                }
                                else
                                {
                                    <span class="text-muted">☆</span>
                                }
                            }
                            <small>(@avgRating.ToString("0.0"))</small>
                        </p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<div class="video-banner position-relative text-center">
    <video autoplay muted loop playsinline class="w-100" style="max-height: 500px; object-fit: cover;">
        <source src="~/images/mainvideo.mp4" type="video/mp4">
        Your browser does not support the video tag.
    </video>

    <!-- Overlay content -->
    <div class="video-overlay position-absolute top-50 start-50 translate-middle text-white">
        <h1>Welcome to Our Store</h1>
        <p>Discover the latest products now</p>
        <a asp-controller="Products" asp-action="Index" class="btn btn-rosegold mt-3">View All Products</a>
    </div>
</div>
