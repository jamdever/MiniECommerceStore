@model MiniECommerceStore.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h1>@Model.Name</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3">Stock</dt>
            <dd class="col-sm-9">
                @if (Model.Stock > 0)
                {
                    <span class="text-success fw-bold">In Stock (@Model.Stock available)</span>
                }
                else
                {
                    <span class="text-danger fw-bold">Out of Stock</span>
                }
            </dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.CategoryName)</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    @if (Model.Stock > 0)
    {
        <form asp-controller="Basket" asp-action="Add" method="post" class="d-flex gap-2 align-items-center">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productId" value="@Model.ProductID" />
            <input type="hidden" name="name" value="@Model.Name" />
            <input type="hidden" name="price" value="@Model.Price" />

            <label for="quantity" class="me-2">Quantity:</label>
            <input type="number" name="quantity" value="1" min="1" max="@Model.Stock" class="form-control" style="width:80px;" />

            <button type="submit" class="btn btn-success">Add to Cart</button>
        </form>

        <form asp-controller="Basket" asp-action="Add" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="productId" value="@Model.ProductID" />
            <input type="hidden" name="name" value="@Model.Name" />
            <input type="hidden" name="price" value="@Model.Price" />
            <input type="hidden" name="quantity" value="1" />
            <button type="submit" class="btn btn-primary" formaction="@Url.Action("Index", "Basket")">
                Buy Now
            </button>
        </form>
    }
    else
    {
        <button class="btn btn-secondary" disabled>Not Available</button>
    }
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ProductID" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

<hr />

<h3>Customer Reviews</h3>

@if (Model.Reviews != null && Model.Reviews.Any())
{
    <ul class="list-group mb-3">
        @foreach (var review in Model.Reviews)
        {
            <li class="list-group-item">
                <strong>@review.Rating ★</strong> - @review.Comment <br />
                <small class="text-muted">
                    By @review.User.Username on @review.CreatedAt.ToShortDateString()
                </small>
            </li>
        }
    </ul>
}
else
{
    <p>No reviews yet. Be the first to leave one!</p>
}

<form asp-controller="Reviews" asp-action="Create" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" name="productId" value="@Model.ProductID" />
    <div class="form-group mb-2">
        <label for="Rating">Rating</label>
        <select name="rating" class="form-control" required>
            <option value="">Select...</option>
            <option value="5">★★★★★ (5)</option>
            <option value="4">★★★★☆ (4)</option>
            <option value="3">★★★☆☆ (3)</option>
            <option value="2">★★☆☆☆ (2)</option>
            <option value="1">★☆☆☆☆ (1)</option>
        </select>
    </div>
    <div class="form-group mb-2">
        <label for="Comment">Review</label>
        <textarea name="comment" class="form-control" rows="3" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit Review</button>
</form>
