@model IEnumerable<MiniECommerceStore.Models.Order>

<h2>All Orders</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Total</th>
            <th>Items</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderID</td>
                <td>@order.User.Username</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.Total.ToString("C")</td>
                <td>@order.Items.Sum(i => i.Quantity)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderID" class="btn btn-info btn-sm">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
