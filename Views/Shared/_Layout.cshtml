@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mini_E_Commerce_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
  
</head>
<body>
    <!-- Navbar -->
    <nav id="mainNavbar" class="navbar navbar-expand-lg navbar-dark custom-navbar fixed-top">
        <div class="container-fluid flex-column">
            <div class="d-flex w-100 align-items-center position-relative">
                <div class="d-flex align-items-center">
                    <form method="get" asp-controller="Home" asp-action="Index" class="d-flex">
                        <input type="text" name="searchString" class="form-control form-control-sm me-2" placeholder="Search..." />
                        <button class="btn btn-outline-light btn-sm" type="submit">Search</button>
                    </form>
                </div>

                <div class="navbar-brand mx-auto text-center">Aurora Luxe</div>

                <div class="d-flex align-items-center">
                    <a class="nav-link text-white d-flex align-items-center me-3" asp-controller="Basket" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" class="bi bi-cart" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 14H4a.5.5 0 0 1-.491-.408L1.01 2H.5a.5.5 0 0 1-.5-.5zM3.14 6l1.25 6.5h7.22l1.25-6.5H3.14zM5 12a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm6 1a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                        </svg>
                        <span class="badge basket-count ms-1">
                            @(HttpContextAccessor.HttpContext.Session.GetInt32("BasketCount") ?? 0)
                        </span>
                    </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Logout">Logout</a>
                    }
                    else
                    {
                        <a class="nav-link text-white" asp-controller="Account" asp-action="Login">Login</a>
                    }
                </div>
            </div>

            <div class="navbar-collapse collapse show justify-content-center mt-2">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    @* Admin & Account links here *@
                </ul>
            </div>
        </div>
    </nav>

    @if (ViewData["Title"]?.ToString() == "Home")
    {
        <header class="hero">
            <div class="hero-content text-center">
                <h1>Welcome to Aurora Luxe</h1>
                <p>Discover our featured products below</p>
            </div>
        </header>
    }

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="site-footer mt-5">
        <div class="container-fluid px-0">
            <div class="row text-center text-md-start">
                <div class="col-md-4 p-4">
                    <h5 class="text-dark">Aurora Luxe</h5>
                    <p class="text-dark">Discover the best products at unbeatable prices. Your one-stop online store for everything!</p>
                </div>
                <div class="col-md-4 p-4">
                    <h5 class="text-dark">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="footer-link">Home</a></li>
                        <li><a asp-controller="Products" asp-action="Index" class="footer-link">All Products</a></li>
                        <li><a asp-controller="Orders" asp-action="Index" class="footer-link">My Orders</a></li>
                        <li><a asp-controller="Account" asp-action="Details" class="footer-link">Account</a></li>
                    </ul>
                </div>
                <div class="col-md-4 p-4">
                    <h5 class="text-dark">Contact Us</h5>
                    <p>Email: support@mini-ecommerce.com</p>
                    <p>Phone: +1 234 567 890</p>
                    <div class="social-icons">
                        <a href="#" class="me-2"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="me-2"><i class="bi bi-twitter"></i></a>
                        <a href="#"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="text-center py-3 mt-2 border-top small">
                &copy; 2025 Mini_E_Commerce_Store. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        // Scroll-hide navbar
        let lastScrollTop = 0;
        const navbar = document.getElementById('mainNavbar');

        window.addEventListener('scroll', function() {
            let st = window.pageYOffset || document.documentElement.scrollTop;
            if (st > lastScrollTop && st > 100) {
                // Scroll down
                navbar.style.top = "-80px";
            } else if (st < lastScrollTop && st <= 0) {
                // Scroll to top
                navbar.style.top = "0";
            }
            lastScrollTop = st <= 0 ? 0 : st;
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
